{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Hxcpp build",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "linux": {
                "command": "node /mnt/kreotem/Deps/lib/Kore/make.js --compile"
            },
            "problemMatcher": [
                "$jshint-stylish"
            ]
        },
        {
            "label": "Hxcpp build and run",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/Deployment"
            },
            "linux": {
                "command": "node /mnt/kreotem/Deps/lib/Kore/make.js --compile --run"
            },
            "problemMatcher": [
                "$jshint-stylish"
            ]
        },
        {
            "label": "Hxcpp run",
            "type": "shell",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "linux": {
                "command": "node /mnt/kreotem/Deps/lib/Kore/make.js --run"
            }
        },
        {
            "label": "Hxcpp clean",
            "type": "shell",
            "linux": {
                "command": "node /mnt/kreotem/Deps/lib/Kore/make.js --clean"
            }
        }
    ]
}